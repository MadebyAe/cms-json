{
  "name": "cms-json",
  "version": "0.0.5",
  "author": "Antoine Melki",
  "license": "MIT",
  "description": "A lightweight CMS loading and saving its data from/to a json file",
  "repository": {
    "type": "git",
    "url": "https://github.com/amelki/cms-json.git"
  },
  "bugs": {
    "email": "antoine@onemore.company"
  },
  "engines": {
    "node": ">= 0.10.0"
  },
  "bin": {
    "cms-json": "./run.js"
  },
  "scripts": {
    "build-css": "node-sass --include-path sass sass/cms.scss public/css/cms.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "lint": "jshint index.js run.js scripts/*/**.js",
    "browserify": "browserify scripts/app.js -t [ babelify --presets [ es2015 ] ] --debug | exorcist public/js/all.js.map > public/js/all.js ",
    "watchify": "watchify scripts/app.js -t [ babelify --presets [ es2015 ] ] -o 'exorcist public/js/all.js.map > public/js/all.js' --debug --verbose",
    "build": "npm run build-css && npm run browserify && node build",
    "test": "node test/index.js"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "compass": "^0.1.1",
    "es5-shim": "^4.5.9",
    "exorcist": "^0.4.0",
    "jsdoc-to-markdown": "^2.0.1",
    "jshint": "^2.9.4",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "angular": "^1.5.8",
    "angular-cookies": "^1.5.8",
    "angular-route": "^1.5.8",
    "angular-sanitize": "^1.5.8",
    "babel-polyfill": "^6.16.0",
    "body-parser": "^1.15.2",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "express": "^4.14.0",
    "html-md": "^3.0.2",
    "jquery": "^3.1.1",
    "marked": "^0.3.6",
    "to-markdown": "^3.0.3"
  }
}
